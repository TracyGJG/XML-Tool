		<div class='fullscreenMask'>
			<marquee>Creating licence file. Please press F5 to reload.</marquee>
		</div>

		<script type='text/javascript'>
			"use strict";
		</script>
		<script src='XML Tool Model.js'></script>
		<script src='XML Tool View.js'></script>
		<script src='XML Tool Controller.js'></script>
	</body>
</html>
